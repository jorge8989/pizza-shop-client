<script type="text/template" class="flavors-table-template">
  <div>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <tr v-for="flavor of flavors">
          <td>
            {{flavor.id}}
          </td>
          <td>{{flavor.name}}</td>
        </tr>
      </tbody>
    </table>
    <h3>Add new flavor</h3>
    <form v-on:submit.prevent="submit()">
      <div class="form-group">
        <label for="name">name</label>
        <input type="text" id="name" v-model="flavor.name" class="form-control" required/>
      </div>
      <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success btn-block">
      </div>
    </form>
  </div>
</script>
<div class="flavors-vue-app">
  <div class="row">
    <div class="col-md-6">
      <h2>Flavors</h2>
      <flavors-table-component v-bind:flavors="flavors"></flavors-table-component>
    </div>
  </div>
</div>
